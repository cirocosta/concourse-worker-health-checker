root = true

[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 8

[*.tf]
indent_size = 2
indent_style = space

[Makefile]
indent_size = 4

[*.yml]
indent_size = 2
indent_style = space

[*.yaml]
indent_size = 2
indent_style = space

[*.md]
indent_style = space
trim_trailing_whitespace = false

[*.html]
indent_style = space
indent_size = 2
